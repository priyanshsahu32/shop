<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/accordian_title"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D1CECE"
        android:padding="10dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/date"
                android:textColor="@color/black"
                android:layout_width="wrap_content"

                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="15/10/2004" />

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/date"
                android:text="Date:" />

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parenttemp"
                android:text="Product : "
                ></TextView>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/parenttemp"
                android:text="Dhan"
                android:id="@+id/productnm"
                ></TextView>
        </RelativeLayout>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/nametemp"
            android:layout_marginTop="28dp"
            android:text="Customer : " />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priyansh Sahu"
            android:layout_marginTop="28dp"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/nametemp"></TextView>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/ratetemp"
            android:layout_marginTop="28dp"
            android:text="25" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/ratetemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="163dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@id/nametemp"
            android:text="Rate : " />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/phtemp"
            android:layout_marginTop="55dp"
            android:text="PhoneNo : " />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7828582123"
            android:layout_marginTop="55dp"
            android:id="@+id/phone"
            android:layout_toRightOf="@+id/phtemp"></TextView>

        <TextView
            android:textColor="@color/black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wttemp"
            android:id="@+id/totalweight"
            android:layout_marginTop="55dp"
            android:text="966" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/wttemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="165dp"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@+id/phtemp"
            android:text="Weight : " />
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemtemp"
            android:text="Items : "
            android:layout_marginTop="89dp"
            ></TextView>
        <TextView
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/itemtemp"
            android:layout_width="match_parent"
            android:layout_marginTop="89dp"
            android:layout_height="wrap_content"
            android:text="aghrkglhqkbkjbbtjhqgjrtgjrbtjqhbtjhbqhrjtbjbtjqbtjkqb4tntqetrjkqe"
            android:id="@+id/items"

            ></TextView>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/items"
            android:id="@+id/paidtemp"
            android:layout_marginTop="22dp"
            android:text="Amount Paid : " />

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25000"
            android:layout_below="@+id/items"
            android:layout_marginTop="22dp"
            android:id="@+id/totalamount"
            android:layout_toRightOf="@+id/paidtemp"></TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>